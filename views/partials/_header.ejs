<nav>
    <span class="nav-logo">
      <img src="images/logo.png" alt="SneakElite Logo">  
      SneakElite
    </span> 
      <!-- Combined Menu -->
    <ul class="menu-list">
      <li class="menu-item"><a href="/" class="menu-link">Home</a></li>

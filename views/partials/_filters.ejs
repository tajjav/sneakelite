<!DOCTYPE html>
<html lang="en">

  <head>
    <title>SneakElite - Filtered Items</title>

    <!-- Meta Information -->
    <meta charset="UTF-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >

    <!--Font links-->
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300&family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- App CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/products.css" />
    <link rel="stylesheet" href="/styles/nav.css" />

    <!-- App JS -->
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
    <script defer src="/scripts/wishlist.js"></script>

  </head>
  <body>
    <header>
      <%- include('_header') %>
      <img src="images/logo.png" alt="SneakElite Logo">
    </header>

    <main >

      <h2>Filtered Shoe Listings</h2>
      <div id="filteredResults">
      <div class="products">
        <% for (let item of shoe_listings) { %>
          <div class="product-card">
            <%- include('_card', {item}) %>
          </div>
          <% } %>
        </div>
    </main>

 <a href="/home-page" class="card-link"></a>

  </body>
</html>
